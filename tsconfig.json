{
	"include"         : [ "src/**/*", "tests/**/*" ],
	"exclude"         : [ "vendor/**/*", "node_modules/**/*" ],
	"compilerOptions" : {
		"target"                       : "es6",
		"module"                       : "es6",
		"lib"                          : [ "es6" ],

		"strict"                       : true,
		"allowJs"                      : true,
		"checkJs"                      : false,
		"allowSyntheticDefaultImports" : true,

		"declaration"                  : true,
		"emitDeclarationOnly"          : true,
		"isolatedModules"              : true,

		"types"                        : [ "@cloudflare/workers-types" ]
	}
}
