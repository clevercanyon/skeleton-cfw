{
	"include"         : [ "src/**/*", "tests/**/*" ],
	"exclude"         : [ "vendor/**/*", "node_modules/**/*" ],
	"compilerOptions" : {
		"target"                       : "es6",
		"module"                       : "es6",
		"moduleResolution"             : "node",
		"lib"                          : [ "es6" ],

		"strict"                       : true,
		"allowJs"                      : true,
		"checkJs"                      : false,
		"allowSyntheticDefaultImports" : true,

		"declaration"                  : true,
		"emitDeclarationOnly"          : true,
		"isolatedModules"              : true,

		"typeRoots"                    : [
			"./node_modules/@types",
			"./node_modules/@cloudflare",
			"./typings"
		]
	}
}
